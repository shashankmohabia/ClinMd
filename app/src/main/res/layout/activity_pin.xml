<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@mipmap/app_background"
    tools:context="com.example.shashankmohabia.clinmd.Authentication.PinActivity">

   <!-- <ImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@mipmap/logo_without_name" />-->

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:text="Pin"
        android:textColor="@color/colorAccent"
        android:textSize="34sp" />

    <com.andrognito.pinlockview.IndicatorDots
        android:id="@+id/indicator_dots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        app:dotDiameter="15dp"
        app:dotEmptyBackground="@drawable/circle_empty"
        app:dotFilledBackground="@drawable/ic_circle_black" />

    <TextView
        android:id="@+id/pinError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/red" />

    <com.andrognito.pinlockview.PinLockView
        android:id="@+id/pin_lock_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:keypadButtonBackgroundDrawable="@drawable/empty_circle_thin"
        app:keypadButtonSize="60dp"
        android:layout_gravity="center"
        app:keypadVerticalSpacing="15dp"
        app:keypadHorizontalSpacing="35dp"
        app:keypadDeleteButtonSize="30dp"
        android:layout_marginTop="20dp"
        app:keypadDeleteButtonPressedColor="@color/black"
        app:keypadShowDeleteButton="true"
        app:keypadTextColor="@color/colorAccent"
        app:keypadTextSize="18dp" />


    <TextView
        android:layout_width="match_parent"
        android:id="@+id/forgotPin"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:layout_marginTop="10dp"
        android:text="Forgot Pin?"
        android:gravity="center"
        android:visibility="invisible"
        android:textColor="@color/colorAccent"/>


</LinearLayout>

