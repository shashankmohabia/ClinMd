<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shashankmohabia.clinmd.Core.AdditionalOptions.AddFamilyMember.AddFamilyMemberFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:layout_gravity="center"
      android:orientation="vertical">

      <android.support.design.widget.TextInputLayout
          android:id="@+id/add_family_member_name_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <EditText
              android:id="@+id/add_family_member_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Name"/>
      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
          android:id="@+id/add_family_member_phone_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <EditText
              android:id="@+id/add_family_member_phone"
              android:inputType="phone"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Phone Number"/>
      </android.support.design.widget.TextInputLayout>

      <Button
          android:id="@+id/add_family_member_submit"
          android:background="@color/black"
          android:textColor="@color/white"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Check Record"/>
  </LinearLayout>

</FrameLayout>
