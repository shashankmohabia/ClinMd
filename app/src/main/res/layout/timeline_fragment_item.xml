<?xml version="1.0" encoding="utf-8"?>

<com.ramotion.foldingcell.FoldingCell xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cell"
    folding-cell:additionalFlipsCount="2"
    folding-cell:animationDuration="1300"
    android:layout_marginTop="8dp"
    folding-cell:cameraHeight="30">

    <!-- CONTENT (UNFOLDED) LAYOUT (MUST BE AT LEAST 2x times BIGGER ttitletent layout bellow)-->
    <include layout="@layout/timeline_cell_content" />

    <!-- TITLE (FOLDED) LAYOUT (MUST BE AT LEAST 2x times SMALLER ttitletent layout above) -->
    <include layout="@layout/timeline_cell_title" />

</com.ramotion.foldingcell.FoldingCell>